<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
         <locale-config>
            <default-locale>
                es
            </default-locale>
            <supported-locale>
                en                
            </supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>
                com.util.local
            </base-name>
            <var>
                tx
            </var>
        </resource-bundle>
    </application>
    
    <managed-bean>
        <managed-bean-name>cUsuario</managed-bean-name>
        <managed-bean-class>com.controlador.cUsuario</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
     <managed-bean>
        <managed-bean-name>cAlbum</managed-bean-name>
        <managed-bean-class>com.controlador.cAlbum</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>cPublicacion</managed-bean-name>
        <managed-bean-class>com.controlador.cPublicacion</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>cPerfil</managed-bean-name>
        <managed-bean-class>com.controlador.cPerfil</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
   
</faces-config>
